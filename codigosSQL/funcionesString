-- concat nos ayuda a poner cualquier caracter al final o al comienzo
SELECT CONCAT('*', nombre_cliente) AS NOMBRE_ASTERISCO
FROM CLIENTE_DESTINO;

--SUBSTR NOS PERMITE PONER CARACTERES EN POSCICIONES ESPECIFICAS, EN EL PRIMER PARENTESIS ESPECIFICAMOS DONDE INICIA EL LA CADENA, Y EN QUE CARACTER QUEREMOS PONER EL AGREGADOP, LUEGO ESPECIFICAMOS CON QUE CARACTER CONCATENAR, Y LUEGO CONCATENAMOS CON EL RESTO DE LA CADENA DESD EL SIGUIENTE CARACTER
SELECT SUBSTR(NOMBRE_CLIENTE, 1,3) || '_' || SUBSTR(nombre_cliente, 4 ) AS NOMBRE_CARACTER
FROM CLIENTE_DESTINO;

--REPLACE: nos ayuda a remplazar caracteres ya sea por otros, por espacios vacios o eliminar caracteres
SELECT REPLACE(NOMBRE_CLIENTE, 'A', 'a') AS NOMBRE_a
FROM CLIENTE_DESTINO;

--LENGTH: nos ayuda a contar la longitud de la cadena
SELECT (NOMBRE_CLIENTE)
FROM CLIENTE_DESTINO
WHERE LENGTH(NOMBRE_CLIENTE) < 6;

--INSTR: NOS AYUDA A BUSCAR CUANTAS VECES UN CARACTER APARECE EN LA CADENA
SELECT NOMBRE_CLIENTE,
    INSTR(NOMBRE_CLIENTE, 'A') AS posicion
FROM CLIENTE_DESTINO;


--UPPER: nos permite colocar la cadena en mayusculas
SELECT UPPER(NOMBRE_CLIENTE) AS NOMBRE_MAYUSCULAS
FROM CLIENTE_DESTINO;


--LOWER: nos permite colocal la cadena en minusculas
SELECT LOWER(NOMBRE_CLIENTE) AS NOMBRE_MINUSCULAS
FROM CLIENTE_DESTINO;


--TRIM: nos permite quitar espacios al inicio y al final de la cadena, tantos como existan
SELECT TRIM(NOMBRE)
FROM PRODUCTOS_DESTINO;

SELECT LTRIM(NOMBRE_CLIENTE) AS NOMBRE_SIN_IZQUIERDA, --Quita todos los espacios a la izquierda
    RTRIM(NOMBRE_CLIENTE) AS NOMBRE_SIN_DERECHA --Quita todos los espacios a la derecha
FROM CLIENTE_DESTINO;


--REGEXP_SUBSTR: EXTRAE UNA CADENA QUE COICIDE CON UNA EXPRESION REGULAR
SELECT REGEXP_SUBSTR(NOMBRE, '[A-Z]') AS PRIMER_MAYUSCULA
FROM productos_destino;


--INITCAP: CONVIERTE LA PRIMERA LETRA EN MAYUSCULA, EL RESTO EN MINUSCULA
SELECT INITCAP(NOMBRE_CLIENTE)
FROM CLIENTE;