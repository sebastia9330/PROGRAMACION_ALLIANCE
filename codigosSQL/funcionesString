                                            --FUNCIONES PARA STRINGS

-- concat nos ayuda a mezclar dos cadenas
--forma1
concat(concat(Default.EMPLEADO.NOMBRE, ' '), Default.EMPLEADO.APELLIDO1)
--forma2
Default.EMPLEADO.NOMBRE || ' ' || Default.EMPLEADO.APELLIDO1

--SUBSTR NOS PERMITE EXTRAR UNA PORCION DE LA CADENA DE TEXTO, ESPECIFICAMOS EL CARACTER INICIAR Y LA LONGITUD QUE QUEREMOS 
SUBSTR(Default.PRODUCTO.DIMENSIONES,1,4)

--REPLACE: nos ayuda a remplazar caracteres ya sea por otros, por espacios vacios o eliminar caracteres
replace(
    replace(
        replace(Default.EMPLEADO.CODIGO_OFICINA,1,5),2,5),3,5)

--LENGTH: nos ayuda a contar la longitud de la cadena
length(Default.PRODUCTO.PRECIO_VENTA)

--INSTR: NOS AYUDA A BUSCAR el caracter indicado, en que pocicion aparece y si existe dicho caracter en la cadena, tambien podemos especificar posiciones de busqueda
INSTR(Default.PRODUCTO.DESCRIPCION,'A')


--UPPER: nos permite colocar la cadena en mayusculas
SELECT UPPER(NOMBRE_CLIENTE) AS NOMBRE_MAYUSCULAS
FROM CLIENTE_DESTINO;


--LOWER: nos permite colocal la cadena en minusculas
SELECT LOWER(NOMBRE_CLIENTE) AS NOMBRE_MINUSCULAS
FROM CLIENTE_DESTINO;


--TRIM: nos permite quitar espacios al inicio y al final de la cadena, tantos como existan
TRIM(Default.EMPLEADO.NOMBRE)

RTRIM(Default.EMPLEADO.PUESTO,'e') --Quita todos los espacios a la izquierda, TAMBIEN PUEDE ELIMINAR EL PRIMER CARACTER
LTRIM(Default.EMPLEADO.PUESTO,'e') --Quita todos los espacios a la derecha, TAMBIEN PUEDE ELIMINAR EL ULTIMO CARACTER



--REGEXP_SUBSTR: EXTRAE UNA CADENA QUE COICIDE CON UNA EXPRESION REGULAR
SELECT REGEXP_SUBSTR(NOMBRE, '[A-Z]') AS PRIMER_MAYUSCULA
FROM productos_destino;


--INITCAP: CONVIERTE LA PRIMERA LETRA EN MAYUSCULA, EL RESTO EN MINUSCULA
INITCAP(Default.PRODUCTO.DESCRIPCION)

--LPAD: RELLENA CON EL CARACTAR INDICADO A LA IZQUIERDA, LA CANTIDAD DE ESPACIOS SEÑALADOS PARA LOGRAR UNA UNIFORMIDAD EN EL LARGO DE LAS CADENAS
LPAD(Default.EMPLEADO.NOMBRE,10,0)

--RPAD: RELLENA CON EL CARACTAR INDICADO A LA IZQUIERDA, LA CANTIDAD DE ESPACIOS SEÑALADOS PARA LOGRAR UNA UNIFORMIDAD EN EL LARGO DE LAS CADENAS
RPAD(Default.EMPLEADO.NOMBRE,10,0)

--TRANSLATE: CONVIERTE LOS CARACTERES DE UNA CADENA EN OTROS CARACTERES ESPECIFICADOS
TRANSLATE(Default.PRODUCTO.CODIGO_PRODUCTO,'AEIOU','123456')

--SOUNDEX: GENERA UN CODIGO FONETICO PARA CADA STRING, LO QUE PERMITE COMPARACIONES ENTRE PALABRAS CON SONIDOS SIMILARES
SOUNDEX(Default.PRODUCTO.DESCRIPCION)

--REGEXP_REPLACE: remplaza una expresion de caracteres por algo especifico
REGEXP_REPLACE(Default.PEDIDO.COMENTARIOS,'[^a-z]','')

                                            --FUNCIONES DE FECHA
--sYSDATE: USADA PARA COMPAPAR POR LA FECHA Actual del sistema
Default.PEDIDO.FECHA_ENTREGA > SYSDATE

--INTERVAL: SIRVE PARA ESPECIFICAR LA CANTIDAD DE DIAS QUE QUEREMOS RESTAR A LA FECHA ACTUAL PARA OBSERVAR UN RANGO ESPECIFICO
Default.PEDIDO.FECHA_ENTREGA > SYSDATE - INTERVAL '60' DAY
Default.PEDIDO.FECHA_ENTREGA > TO_DATE('07/10/2024', 'DD/MM/YYYY')  - INTERVAL '90' DAY

--ADD_MONSTHS: SE UTILIZA PARA EJECUTAR OPERACIONES SOBRE MESES
Default.PEDIDO.FECHA_ENTREGA > ADD_MONTHS(SYSDATE, -2)

--TO_DATE:CONVIERTE CADENAS DE TEXTO AL FORMATO FECHA ESPECIFICADO, ADEMAS CAMBIA EL FORMATO DE FECHA
TO_DATE ('07/10/2024','DD/MM/YYYY')
TO_DATE ('2024/10/07','YYYY/MM/DD')

                                            --FUNCIONES NUMERICAS

--ROUND: SIRVE PARA REDONDEAR LA CANTIDAD DE DECIMALES QUE QUEREMOS MOSTRAR
ROUND(Default.PRODUCTO.PRECIO_PROVEEDOR,1)

--ABS:TOMA EL VALOR DE LA OPERACION Y LO TRANSFORMA EN POSITIVO, SIN IMPORTAR SI EL VALOR ES NEGATIVO
ABS((PRECIO_UNIDAD - PRECIO_PROVEEDOR) * CANTIDAD)

--CEIL: REDONDE EL VALOR AL ENTERO MAS CERCANO HACIA ARRIBA
CEIL((PRECIO_UNIDAD - PRECIO_PROVEEDOR) * CANTIDAD)

--FLOR: REDONDEA EL VALOR AL ENTERO MAS CERCANO HACIA BAJO
FLOOR((PRECIO_UNIDAD - PRECIO_PROVEEDOR) * CANTIDAD)

--MOD: DECUELCE EL RESTO DE LA DIVISION DE DOS NUMEROS, IDEAL PARA SABER QUE NUMERO ES PAR O IMPAR
MOD(Default.FAC.CANTIDAD,2)

--POWER: CALCULA EL NUMERO ELEVADO A UNA POTENCIA ESPECIFICA
POWER(Default.FAC.CANTIDAD,2)

--SQRT: CALCULA LA RAIZ CUADRADA DE UN NUMERO
SQRT(Default.FAC.CANTIDAD)

--SIGN: DECUELVE EL SIGNO DE UN NUMERO, -1 SI ES NEGATIVO Y 1 SI ES POSITIVO
SIGN((PRECIO_UNIDAD - PRECIO_PROVEEDOR) * CANTIDAD)

--TRUNC: REDUCE EL NUMERO A LA CANTIDAD DE DCIMALES ESPECIFICADA SIN REDONDEAR
TRUNC(Default.FAC.PRECIO_PROVEEDOR,1)